{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <h1>Please sign in</h1>
    <div class="uk-grid">
        <div>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {% if app.user %}
                    <div class="mb-3">
                        You are logged in as {{ app.user.username }}, <a href="{{ path('logout') }}">Logout</a>
                    </div>
                {% endif %}

                <div class="uk-margin">
                    <div class="uk-inline">
                        <span class="uk-form-icon" uk-icon="icon: user"></span>
                        <input class="uk-input uk-form-width-large" type="email" value="{{ last_username }}" name="email" placeholder="Username" required autofocus>
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-inline">
                        <span class="uk-form-icon" uk-icon="icon: lock"></span>
                        <input class="uk-input uk-form-width-large" type="password" name="password" placeholder="Password" required>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}

                <button class="uk-button" type="submit">Sign in</button>
            </form>
        </div>

        <div>
            <div class="uk-grid">
                <div>
                    <div style="height: 50px" class="uk-divider-vertical"></div>
                    <p>OR</p>
                    <div style="height: 50px" class="uk-divider-vertical"></div>
                </div>
                <div>
                    <a style="margin-top: 62px; margin-left: 50px" class="uk-button uk-button-default" href="{{ path('register') }}">Register</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
