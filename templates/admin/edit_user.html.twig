{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}

    {{ form_start(form) }}
        <div class="uk-margin">
            <div class="uk-inline">
                <span class="uk-form-icon" uk-icon="icon: user"></span>
                {{ form_widget(form.firstname, { 'attr': { 'class': 'uk-input uk-form-width-large' }}) }}
            </div>
        </div>
        <div class="uk-margin">
            <div class="uk-inline">
                <span class="uk-form-icon" uk-icon="icon: users"></span>
                {{ form_widget(form.lastname, { 'attr': { 'class': 'uk-input uk-form-width-large' }}) }}
            </div>
        </div>
        <div class="uk-margin">
            <div class="uk-inline">
                <span class="uk-form-icon" uk-icon="icon: mail"></span>
                {{ form_widget(form.email, { 'attr': { 'class': 'uk-input uk-form-width-large' }}) }}
            </div>
        </div>
        <div class="uk-margin">
            <div class="uk-inline">
                {{ form_row(form.roles) }}
            </div>
        </div>
        <div class="uk-margin">
            <div class="uk-inline">
                {{ form_row(form.subjects) }}
            </div>
        </div>
        <button class="uk-button">Save</button>
    {{ form_end(form) }}

{% endblock %}