<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/uikit.min.css') }}">{% endblock %}
    </head>
    <body>
        <nav>
            <ul>
                {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li><a href="{{ path('login') }}">Login</a></li>
                    <li><a href="{{ path('register') }}">Register</a></li>
                {% else %}
                    <li><a href="{{ path('profile') }}">Profile</a></li>
                    <li><a href="{{ path('logout') }}">Logout</a></li>
                {% endif %}
            </ul>
        </nav>
        {% block body %}{% endblock %}
        {% block javascripts %}<script src="{{ asset('js/uikit.min.js') }}"></script>{% endblock %}
    </body>
</html>
